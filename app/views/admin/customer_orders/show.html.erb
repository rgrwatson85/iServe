<%- model_class = CustomerOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:table_id) %>:</strong></dt>
  <dd><%= @customer_order.table_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_order_ready) %>:</strong></dt>
  <dd><%= @customer_order.is_order_ready %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_order_paid_for) %>:</strong></dt>
  <dd><%= @customer_order.is_order_paid_for %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customer_orders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_order_path(@customer_order), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_order_path(@customer_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
