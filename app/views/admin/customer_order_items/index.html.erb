<%- model_class = CustomerOrderItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:customer_order_id) %></th>
      <th><%= model_class.human_attribute_name(:menu_item_id) %></th>
      <th><%= model_class.human_attribute_name(:is_menu_item_ready) %></th>
      <th><%= model_class.human_attribute_name(:waitstaff_note) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customer_order_items.each do |customer_order_item| %>
      <tr>
        <td><%= link_to customer_order_item.id, customer_order_item_path(customer_order_item) %></td>
        <td><%= customer_order_item.customer_order_id %></td>
        <td><%= customer_order_item.menu_item_id %></td>
        <td><%= customer_order_item.is_menu_item_ready %></td>
        <td><%= customer_order_item.waitstaff_note %></td>
        <td><%=l customer_order_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_customer_order_item_path(customer_order_item), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      customer_order_item_path(customer_order_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_order_item_path,
            :class => 'btn btn-primary' %>
