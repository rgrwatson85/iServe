<%- model_class = CustomerOrderItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer_order_id) %>:</strong></dt>
  <dd><%= @customer_order_item.customer_order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:menu_item_id) %>:</strong></dt>
  <dd><%= @customer_order_item.menu_item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_menu_item_ready) %>:</strong></dt>
  <dd><%= @customer_order_item.is_menu_item_ready %></dd>
  <dt><strong><%= model_class.human_attribute_name(:waitstaff_note) %>:</strong></dt>
  <dd><%= @customer_order_item.waitstaff_note %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customer_order_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_order_item_path(@customer_order_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_order_item_path(@customer_order_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
