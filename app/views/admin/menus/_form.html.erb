<%= form_for @menu, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :menu_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :menu_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_time, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                menus_path, :class => 'btn' %>
  </div>
<% end %>
