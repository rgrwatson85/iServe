<%- model_class = MenuItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:item_name) %>:</strong></dt>
  <dd><%= @menu_item.item_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_price) %>:</strong></dt>
  <dd><%= @menu_item.item_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:menu_id) %>:</strong></dt>
  <dd><%= @menu_item.menu_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              menu_items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_menu_item_path(@menu_item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              menu_item_path(@menu_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
